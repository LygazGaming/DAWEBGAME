@model DAGAME.Models.EditAccountViewModel
@{
    ViewBag.Title = "Chỉnh sửa tài khoản";
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa tài khoản</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control",@readonly= "true"})
                </div>
                <div class="form-group">
                    <label>Họ tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Quyền</label>
                    @Html.DropDownListFor(x => x.Roles, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control" ,@multiple="multiple"})
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </div>
            }
        </div>
    </div>
</section>
