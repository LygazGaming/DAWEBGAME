}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
    <div id="carouselExampleFade" class="carousel slide carousel-fade main_slider">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/assets/images/slider/fotor-ai-2023110901431.jpg"/> 
            </div>
            <div class="carousel-item">
                <img src="~/Content/assets/images/slider/fotor-ai-2023110901834.jpg"/> 
